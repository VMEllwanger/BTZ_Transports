@model BTZ_Transports.API.ViewModels.VeiculoViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Notorista</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="application/json" asp-action="Editar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fabricante" class="control-label"></label>
                <input asp-for="Fabricante" class="form-control" />
                <span asp-validation-for="Fabricante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CombustivelId" class="control-label"></label>
                <select asp-for="CombustivelId" class="form-control">
                    <option value="1">Gasolina</option>
                    <option value="2">Etanol</option>
                    <option value="3">Disel</option>
                </select>
                <span asp-validation-for="CombustivelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadeMaximaDoTanque" class="control-label"></label>
                <input asp-for="CapacidadeMaximaDoTanque" class="form-control" type="number" pattern="[0-9]*" maxlength="10" />
                <span asp-validation-for="CapacidadeMaximaDoTanque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoDeFabricacao" class="control-label"></label>
                <input asp-for="AnoDeFabricacao" class="form-control" type="number" pattern="[0-9]*" maxlength="4" />
                <span asp-validation-for="AnoDeFabricacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacao" class="control-label"></label>
                <input asp-for="Observacao" class="form-control" value=" " />
                <span asp-validation-for="Observacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a lista</a>
</div>
 
