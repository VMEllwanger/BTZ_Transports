@model IEnumerable<BTZ_Transports.API.ViewModels.RegistroAbastecimentoViewModel>

@{
    ViewData["Title"] = "Registro Abastecimento";
}
<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Criar"><spam class="fa fa-plus"></spam> Novo</a>
</p>

<table class="table">
    <thead>
        <tr> 
            <th>
                VeiculoId
            </th>
            <th>
                MotoristaId
            </th>
            <th>
                CombustivelId
            </th>
            <th>
                QuantidadeAbastecida
            </th>
            <th>
                ValorTotal
            </th>
            <th>
                Data
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
              
                <td>
                    @Html.DisplayFor(modelItem => item.VeiculoId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MotoristaId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CombustivelId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantidadeAbastecida)
                </td>
                <td> 
                    @Html.DisplayFor(modelItem => item.ValorTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
          
            </tr>
        }

        <form id="antiForgeryForm" method="post">
            @Html.AntiForgeryToken()
        </form>
    </tbody>
</table>

 
<!-- Modal de Exclusão -->
<div class="modal fade" id="excluirModal" tabindex="-1" role="dialog" aria-labelledby="excluirModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="excluirModalLabel">Confirmar Exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                Tem certeza de que deseja excluir este produto?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirmarExclusao">Excluir</button>
            </div>
        </div>
    </div>
</div>